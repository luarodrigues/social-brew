{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/firebaseConfig.js",
    "firebaseConfig/firebaseConfig.js",
    "pages/api/home-api.jsx",
    "pages/api/coffee-calculator.js",
    "pages/recipe.jsx"
  ],
  "exclude": ["node_modules"]
}
